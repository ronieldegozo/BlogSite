

  
  <div class="container-fluid">
      <div class="row">
        <div class="col-sm-6 px-0 d-none d-sm-block ">
          <img src="/image/login.jpg" alt="login image" class="login-img">
        </div>

        <div class="col-sm-6 login-section-wrapper">
          <div class="brand-wrapper mt-5">
              <a href="/"><h1 class="text-center bb"><strong>Shop Roniel</strong></h1></a>
          </div>

          <div class="card mt-5">
              <div class="card-header">
                <div class="my-auto">
                  <h1 class="login-title text-center">Log in</h1>
                </div>
              </div>
              <div class="card-body">
                <form action="/users/login" method="POST">
                  <%- include('./partials/messages') %>
                  <div class="form-group">
                    <label for="email"><strong>Email</strong></label>
                    <input  type="email" id="email" name="email" class="form-control"placeholder="Enter Email">
                  </div>
                  
                  <div class="form-group mb-4">
                    <label for="password"><strong>Password</strong></label>
                    <input   type="password" id="password" name="password" class="form-control" placeholder="Enter Password">
                  </div>
                  <button type="submit" class="btn btn-primary btn-block">Login</button>
                </form>
              </div>
              <div class="card-footer">
                <p class="login-wrapper-footer-text">Don't have an account? <a href="/users/register" class="text-reset">Register here</a></p>
              </div>
          </div>

        </div>

      </div>
    </div>
  </main>

  